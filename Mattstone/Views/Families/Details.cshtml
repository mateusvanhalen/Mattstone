@model Mattstone.Models.ViewModels.FamilyDetialViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Your Family</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Family Name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Family.FamilyName)
        </dd>
        <dt>
            Family Id:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Family.FamilyId)
        </dd>
        <dt>
            Members:
        </dt>
        @*For Loop to get User Handle for display*@
        @foreach (var item in Model.Users)
        {
            <div class="dl-horizontal">
                <dd>
                   @item.FamilyRole:  @item.UserHandle,  @item.UserName
                </dd>
            </div>
        }
    </dl>
</div>
