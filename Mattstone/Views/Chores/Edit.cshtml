@model Mattstone.Models.ViewModels.ChoresEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Chore below</h2>

<h4>Chore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Chore.ChoreId" />
            @if (Model.IsParent == true)
            {
                <div class="form-group">
                    <label asp-for="Chore.ChoreName" class="control-label"></label>
                    <input asp-for="Chore.ChoreName" class="form-control" />
                    <span asp-validation-for="Chore.ChoreName" class="text-danger"></span>
                </div>
            }
            @if (Model.IsParent == false)
            {
                <div class="hidden">
                    <label asp-for="Chore.ChoreName" class="control-label"></label>
                    <input asp-for="Chore.ChoreName" class="form-control" />
                    <span asp-validation-for="Chore.ChoreName" class="text-danger"></span>
                </div>
            }
            @if (Model.IsParent == true)
            {
                <div class="form-group">
                    <label asp-for="Chore.Description" class="control-label"></label>
                    <input asp-for="Chore.Description" class="form-control" />
                    <span asp-validation-for="Chore.Description" class="text-danger"></span>
                </div>
            }
            @if (Model.IsParent == false)
            {
                <div class="hidden">
                    <label asp-for="Chore.Description" class="control-label"></label>
                    <input asp-for="Chore.Description" class="form-control" />
                    <span asp-validation-for="Chore.Description" class="text-danger"></span>
                </div>
            }
            @if (Model.IsParent == true)
                {
                    <div class="form-group">
                        <label asp-for="Chore.DayId" class="control-label"></label>
                        <select asp-for="Chore.DayId" class="form-control" asp-items="@Model.Day"></select>
                        <span asp-validation-for="Chore.DayId" class="text-danger"></span>
                    </div>
                }
            @if (Model.IsParent == false)
                {
                    <div class="hidden">
                        <label asp-for="Chore.DayId" class="control-label"></label>
                        <select asp-for="Chore.DayId" class="form-control" asp-items="@Model.Day"></select>
                        <span asp-validation-for="Chore.DayId" class="text-danger"></span>
                    </div>
                }
                @*<div id="FamilyId">
                @Model.Family.FamilyName
            </div>*@
                <div class="hidden">
                    @*Stretch Goal to edit user only by FamId*@
                    <label asp-for="Chore.UserId" class="control-label"></label>
                    <select asp-for="Chore.UserId" class="form-control" asp-items="@Model.Users"></select>
                    <span asp-validation-for="Chore.UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Chore.Done" /> @Html.DisplayNameFor(model => model.Chore.Done)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
                @foreach (var item in Model.Family.Users)
            {
                <div class="dl-horizontal">
                    <dd>
                        @item.UserHandle
                        </dd>
                    </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
